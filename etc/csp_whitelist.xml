<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="connect-src">
            <values>
                <value id="builderio" type="host">cdn.builder.io</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="builderio" type="host">cdn.builder.io</value>
            </values>
        </policy>
        <policy id="script-src">
            <values>
                <value id="builderio" type="host">cdn.builder.io</value>
            </values>
        </policy>
        <policy id="frame-ancestors">
            <values>
                <value id="builderio" type="host">builder.io</value>
                <value id="builderio.cdn" type="host">cdn.builder.io</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
